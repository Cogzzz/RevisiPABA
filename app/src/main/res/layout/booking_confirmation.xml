<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/loadingProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Booking Details Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Booking Details"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/bookingIdTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Booking ID: ABC123"/>

            <TextView
                android:id="@+id/dateTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Date: 2024-01-01"/>

            <TextView
                android:id="@+id/durationTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Duration: 2 hours"/>

            <TextView
                android:id="@+id/priceTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Price: Rp 200.000"/>

            <TextView
                android:id="@+id/paymentMethodTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Payment: BCA Virtual Account"/>

            <TextView
                android:id="@+id/statusTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                tools:text="Status: Pending"/>

            <!-- Worker Details Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Worker Details"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/workerNameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Name: John Doe"/>

            <TextView
                android:id="@+id/workerPhoneTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Phone: +62123456789"/>

            <TextView
                android:id="@+id/workerAddressTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                tools:text="Address: Jl. Example No. 123"/>

            <!-- User Details Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Details"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/userNameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Name: Jane Doe"/>

            <TextView
                android:id="@+id/userPhoneTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Phone: +62987654321"/>

            <TextView
                android:id="@+id/userAddressTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                tools:text="Address: Jl. Sample No. 456"/>

            <!-- Jobs Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selected Jobs"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/jobsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>